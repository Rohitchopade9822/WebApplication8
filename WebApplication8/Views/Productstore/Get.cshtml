@model IEnumerable<WebApplication8.Models.Product>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<a asp-action="Create" class="btn btn-dark">Create new Product</a>
<table class="table">

    <thead>
       <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>

       </tr>

    </thead>

    <tbody>

        @foreach(var itam in Model)
        {
            <tr>
                <td>@itam.Id</td>
                <td>@itam.Name</td>
                <td>@itam.Description</td>
                <td>@itam.Category</td>

               

            </tr>

        }
        
    </tbody>
</table>